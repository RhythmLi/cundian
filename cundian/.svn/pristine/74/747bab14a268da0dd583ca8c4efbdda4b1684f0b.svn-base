/**
      withdrew 提现收益
*/
@import "common";

.b-withdrew {
    font-size: .3rem;
    .m-input {
        border-top: 1px solid transparent;
        .u-input {
            margin: .3rem 0;
            line-height: .9rem;
            border: 1px solid @orange;
            border-radius: .1rem;
            position: relative;
            &.left-icon {
                padding-left: .8rem;
            }
            &.left-icon:before {
                content: "";
                position: absolute;
                width: .4rem;
                height: .4rem;
                left: .2rem;
                top: .25rem;
                vertical-align: middle;
            }
            &.icon-user:before {
                background: url("../imgs/sprite2.png") no-repeat -.8rem -3.6rem;
                background-size: 8.8rem;
            }
            &.icon-red:before {
                background: url("../imgs/sprite2.png") no-repeat 0 -3.2rem;
                background-size: 8.8rem;
            }
            &.icon-coin:before {
                background: url("../imgs/sprite2.png") no-repeat -.4rem -3.2rem;
                background-size: 8.8rem;
            }
            input {
                display: block;
                line-height: .9rem;
                width: 100%;
                border: 0;
                background: transparent;
                outline: 0;
            }
        }
    }
    ol.m-hint {
        margin: 1.4rem .3rem .8rem;
        line-height: .5rem;
        li {
            list-style: decimal;
            margin-left: 1em;
        }
    }
}